<h1>Welcome to Dragon Drop</h1>
<h3>Drag Charmeleon</h3>
<div id="wrapper">
  <%= image_tag("charmeleon", id: "drag1", draggable: "true", ondragstart: "drag(event)") %>
  <div class="target_wrappers">
    <h3>Drappable Canvas Hosting PDF</h3>
    <canvas id="the-canvas" ondrop="drop(event)" ondragover="allowDrop(event)"></canvas>
  </div>
  <div class="target_wrappers">
    <h3>Drappable Div</h3>
    <div id="div1" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
  </div>
</div>



<canvas id="myCanvas" width="300" height="150" style="border:1px solid #d3d3d3;">
